doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Branches
    link(rel='shortcut icon' href='/assets/img/favicons/favicon-32x32.png')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
    link(rel="stylesheet" href="/styles/main_ion.css")   
  body
    .container
      h5 Branches List &nbsp;
        a(href="/branches") â‡¦
          .d-md-flex.justify-content-md-end
            button.position-absolute.top-0.end-0.btn.btn-warning(type='button')
              a(href="/logout/") Sign Out
      hr
      if branches.length
        table.table.table-hover.table-striped
            thead.table-dark
                tr
                    th(scope='col') Branch Name
                    th(scope='col') Date created
                    th(scope='col') Date Updated
                    th(scope='col') Action
                    th(scope='col')
            tbody
            each Branch in branches
                tr
                    td #{Branch.branchName}
                    td #{moment(Branch.createdAt).format("DD-MM-YYYY (HH:MM:SS)")} 
                    td #{moment(Branch.updatedAt).format("DD-MM-YYYY (HH:MM:SS)")}                                                           
                    td 
                      a.edit(href='/UpdateBranches/'+Branch._id)
                        ion-icon(name='create-outline')
                    td
                      form(method="POST", action="/branch_list")
                          input(type="hidden", name="_id", value=Branch._id)
                          button.btn.btn-primary(type='submit')
                            ion-icon(name='trash-outline')

      else
        p There are no records to display
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
    script(type='text/javascript' src='http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js')
    script(type='text/javascript' src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script( type="module" src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js")