  body
    // ===============================================
    // Main Content
    // ===============================================
    main#top.main
      .container(data-layout='container')
        script.
          var isFluid = JSON.parse(localStorage.getItem('isFluid'));
          if (isFluid) {
          var container = document.querySelector('[data-layout]');
          container.classList.remove('container');
          container.classList.add('container-fluid');
          }
        // start nav
        nav.navbar.navbar-standard.navbar-expand-lg.fixed-top.navbar-dark(data-navbar-darken-on-scroll='data-navbar-darken-on-scroll')
          .container-fluid
            a.navbar-brand(href='/index/')
              span.text-white.dark__text-white
                | Karibu
                | Groceries
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse')
              span.navbar-toggler-icon
            #navbarCollapse.collapse.navbar-collapse
              .navbar-nav
                a.nav-item.nav-link.active(href='/index') Home
                a.nav-item.nav-link(href='/landing/about') About Us
                a.nav-item.nav-link(href='/contact') Contact Us
              .navbar-nav.ms-auto
                // <a href="#" class="nav-item nav-link">Login</a>
                a.nav-link(href='/login')
                  i.fa-solid.fa-lock(style='color: white')
                  |  Login
        // end nav
        .row.flex-center.min-vh-100.py-6.text-center
          .col-sm-10.col-md-8.col-lg-6.col-xl-5.col-xxl-4
            .card
              .card-body.p-4.p-sm-5
                h5.mb-0 Forgot your password?
                small
                  | Enter your email and we'll send you a reset
                  | link.
                form.mt-4
                  input.form-control(type='email' placeholder='Email address' required='')
                  .mb-3
                  button.btn.btn-primary.d-block.w-100.mt-3(type='submit' name='submit') Send reset link
                a.fs--1.text-600(href='/login')
                  span.d-inline-block.ms-1 →
