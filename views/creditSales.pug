      .content-page
        // Start content
        .content
          .container-fluid
            // Left Sidebar End
            // ==============================================================
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  h4.page-title
                    | Welcome ! 
                    b #{username} |
                  ol.breadcrumb.float-right
                    | Branch:&nbsp;  
                    b #{branch} &nbsp;|&nbsp;               
                    | Role:&nbsp;  
                    b #{role} &nbsp;|&nbsp;
                    | Email:&nbsp;  
                    b #{email} &nbsp;|&nbsp;
                    li.breadcrumb-item
                      a(href='/creditSales') Credit Sales
                    li.breadcrumb-item
                      a(href='/credit_list') List                     
                  .clearfix
            form#creditfrm.form(action='/newCreditSales' name='creditfrm' method='POST')           
              .row
                .col-md-6
                  .card-box
                    .form-horizontal(role='form')
                        table.table-responsive
                          tbody
                            tr
                              th
                                label(for='ddbuyer') Buyer:
                              th &nbsp;&nbsp;
                              th
                                label(for='nin') National ID:
                            tr
                              td.form-field
                                input#ddbuyer(type='text' name='ddbuyer' autocomplete='off' onkeypress='return validbuyer(event);')
                                small
                                small#lblError(style='color: red')
                              td &nbsp;&nbsp;
                              td.form-field
                                input#nin(type='text' name='nin' autocomplete='off' maxlength='14' onkeypress='return validid(event);')
                                small
                                small#lblErrorid(style='color: red')                           
                        table.table-responsive
                          tbody
                            tr
                              th
                                label(for='loc') Location:
                              th &nbsp;&nbsp;
                              th
                                label(for='contacttel') Contact:
                            tr
                              td.form-field
                                input#loc(type='text' name='loc' autocomplete='off' onkeypress='return valididLocation(event);')
                                small#lblError(style='color: red')
                                small
                                small#lblErrorlc(style='color: red')
                              td &nbsp;&nbsp;
                              td.form-field
                                input#contacttel(type='text' name='contacttel' autocomplete='off' maxlength='10' onkeypress='return functionx(event);')
                                small 
                        table.table-responsive
                          tbody
                            tr
                              th
                                label(for='tonn') Tonnage(kgs):
                              th &nbsp;&nbsp;
                              th
                                label(for='unitprice') Price per Kg:
                            tr
                              td.form-field
                                input#tonn.form-group(type='text' name='tonn' value='0' onkeyup='javascript:this.value=Comma(this.value);' onchange='javascript:sumCalc();' maxlength='9' autocomplete='off' style='width: 100%;' onkeypress='return functionx(event);')
                                small
                              td &nbsp;&nbsp;
                              td.form-field
                                input#unitprice.form-group(type='text' name='unitprice' value='0' maxlength='9' autocomplete='off' style='width: 100%;' onkeypress='return functionx(event);' onkeyup='javascript:this.value=Comma(this.value);' onchange='javascript:sumCalc();')
                                small                                                   
                        table.table-responsive
                          tbody
                            tr
                              th
                                label(for='salesagent') Amount due:
                              th &nbsp;&nbsp;
                              th
                                label(for='amtpd') Sales Agent:
                            tr
                              td.form-field
                                input#amtpd(type='text' name='amtpd' autocomplete='off' maxlength='9' onkeypress='return functionx(event);' onkeyup='javascript:this.value=Comma(this.value);')
                                small                                 
                              td &nbsp;&nbsp;
                              td.form-field
                                input#salesagent(type='text' name='salesagent' autocomplete='off' style="background-color:#C0C0C0; border-radius:5px" value=username readonly)
                                small#lblError1(style='color: red')
                                small                                                     
                // end col
                .col-md-6
                  .card-box
                    .form-field
                      label(for='prodname')
                        | Name of the produce:
                      select#prodname.chzn-select(value='prodname' name='prodname' style='width:100%')
                        option(value='' selected='') --search the item name--
                        each pdc in produce
                          option(value=pdc.prodname) #{pdc.prodname}
                      small                   
                    .form-field
                      label(for='produnane')
                        | Type of produce:
                      select#ddproduce.form-control(type='text' value='ddproduce' name='ddproduce' autocomplete='off' width='100%')
                        option(selected='' value='') --select produce type--
                        option(value='Breeder') Breeder 
                        option(value='Nuclear') Nuclear   
                        option(value='Foundation') Foundation
                        option(value='Certified') Certified                        
                      small
                      table.table-responsive
                        tbody
                          tr
                            th
                              label(for='duedte') Due date:
                            th &nbsp;&nbsp;
                            th
                              label(for='dpatchdate') Date of dispatch:
                          tr
                            td.form-field
                              input#duedte.form-control.pull-right.datepicker(type='date' name='duedte' autocomplete='off' style='width: 100%;')
                              small
                            td &nbsp;&nbsp;
                            td.form-field
                              input#dpatchdate.form-control.pull-right.datepicker(type='date' name='dpatchdate' autocomplete='off' style='width: 100%;')
                              small    
                    hr
                    .mb-3
                      input#trans_type(type='text' name='trans_type' style='width: 40%; border: none;' value="credit" readonly hidden)
                      input#ddbranch(type='text' name='ddbranch' style='width: 40%; border: none;' value=branch readonly hidden)
                      input.btn-primary(type='submit' value='Save' style='width: 50%; height: 40px; border-radius: 5px;')
