      .content-page
        // Start content
        .content
          .container-fluid
            // Left Sidebar End
            // ==============================================================
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  h4.page-title
                    | Welcome ! 
                    b #{username} |
                  ol.breadcrumb.float-right
                    | Branch:&nbsp;  
                    b #{branch} &nbsp;|&nbsp;               
                    | Role:&nbsp;  
                    b #{role} &nbsp;|&nbsp;
                    | Email:&nbsp;  
                    b #{email} &nbsp;|&nbsp;
                    li.breadcrumb-item
                      a(href='/add_item') Items
                    li.breadcrumb-item
                      a(href='/items_list') Items List
                  .clearfix
            form#itemsfrm.form(action = "/UpdateItems?id="+tb_Item._id  method="POST")                 
              .row
                .col-md-6
                  .card-box
                    .form-horizontal(role='form')
                      table.table-responsive
                        tbody
                          tr
                            th
                              label(for='itemName') Item Name: #{itemName}
                            th
                              label(for='itemCat') Category:
                          tr
                            td.form-field
                              input#itemName(type='text' name='itemName' autocomplete='off' value=tb_Item.itemName)
                              small#lblError(style='color: red')
                              small
                            td.form-field
                              select#ddprodtype.form-control(type='text' name='ddprodtype' autocomplete='off' width='100%' value=tb_Item.ddprodtype)
                                option(selected='' value='') --select produce type--
                                option(value='Breeder') Breeder 
                                option(value='Nuclear') Nuclear   
                                option(value='Foundation') Foundation
                                option(value='Certified') Certified  
                              small    
                      .form-field
                        label(for='sku') SKU:
                        input#sku(type='text' name='sku' maxlength='8' autocomplete='off' value=tb_Item.sku)
                        small#lblError(style='color: red')
                        small
                      .form-field
                        label(for='sdate') Expiry Date:
                        input#sdate(type='date' name='sdate' autocomplete='off' value=tb_Item.sdate)
                        small
                // end col
                .col-md-6
                  .card-box
                    .form-field
                      table.table-responsive
                        tbody
                          tr
                            th
                              label(for='costprice') Purchase Price(UgX):
                            th
                              label(for='sellprice') Selling Price(UgX):
                          tr
                            td.form-field
                              input#costprice(type='text' name='costprice' autocomplete='off' maxlength='9' onkeypress='return functionx(event);' onchange='javascript:sumCalc();' value=tb_Item.costprice)
                              small
                            td.form-field
                              input#sellprice(type='text' name='sellprice' autocomplete='off' maxlength='9' onchange='javascript:sumCalc();' onkeypress='return functionx(event);' value=tb_Item.sellprice)
                              small
                              small
                      .form-field
                        label(for='sku') Profit:
                        input#profit_loss(type='text' name='profit_loss' autocomplete='off' onkeypress='return functionx(event);' style='width: 50%; border-radius: 5px;' readonly value=tb_Item.profit_loss)
                        small#lblError(style='color: red')
                        small
                      .mb-3
                        hr
                        input.btn-primary(type='submit' value='Update' style='width: 50%; height: 40px; border-radius: 5px;')
                      hr                   
            // start Modal-items
