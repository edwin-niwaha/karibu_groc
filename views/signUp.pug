  body
    // ===============================================
    // Main Content
    // ===============================================
    main#top.main
      .container(data-layout='container')
        script.
          var isFluid = JSON.parse(localStorage.getItem('isFluid'));
          if (isFluid) {
          var container = document.querySelector('[data-layout]');
          container.classList.remove('container');
          container.classList.add('container-fluid');
          }
        // start nav
        nav.navbar.navbar-standard.navbar-expand-lg.fixed-top.navbar-dark(data-navbar-darken-on-scroll='data-navbar-darken-on-scroll')
          .container-fluid
            a.navbar-brand(href='/index')
              span.text-white.dark__text-white
                | Karibu
                | Groceries
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse')
              span.navbar-toggler-icon
            #navbarCollapse.collapse.navbar-collapse
              .navbar-nav
                a.nav-item.nav-link.active(href='/index') Home
                a.nav-item.nav-link(href='/landing/about') About Us
                a.nav-item.nav-link(href='/contact') Contact Us
              .navbar-nav.ms-auto
                // <a href="#" class="nav-item nav-link">Login</a>
                a.nav-link(href='/signUp')
                  i.fa-solid.fa-lock(style='color: white')
                  |  Signup
        // end nav
        .row.flex-center.min-vh-100.py-6
          .col-sm-10.col-md-8.col-lg-6.col-xl-5.col-xxl-4
            .card
              .card-body.p-4.p-sm-5
                .row.flex-between-center.mb-2
                  .col-auto
                    h5 Register Here
                  .col-auto.fs--1.text-600
                    span.mb-0.undefined Already have an account? 
                    span
                      a(href='/login') Login
                  hr
                // start reg form
                form#signup.form(action='/signup' name='signup' method='POST')
                  div
                    table.table-responsive
                      tbody
                        tr
                          th
                            label(for='firstname') First name:
                          th
                            label(for='surname') Surname:
                        tr
                          td.form-field
                            input#firstname(type='text' name='firstname' autocomplete='off')
                            small
                          td.form-field
                            input#surname(type='text' name='surname' autocomplete='off')
                            small
                  .form-field
                    label(for='email') Email:
                    input#email(type='text' name='email' autocomplete='off')
                    small
                  div
                    table.table-responsive
                      tbody
                        tr
                          th
                            label(for='firstname') Password:
                          th
                            label(for='surname') Confirm Password:
                        tr
                          td.form-field
                            input#password(type='password' name='password' autocomplete='off')
                            small
                          td.form-field
                            input#confirm-password(type='password' name='confirm-password' autocomplete='off')
                            small
                  div
                    table.table-responsive
                      tbody
                        tr
                          th
                            label(for='role') User role:
                          th
                            label(for='ddbranch') Branch:
                        tr
                          td.form-field
                            select#role.form-control(type='text' value='role' name='role' autocomplete='off' width='100%')
                              option(selected='' value='') --select user role--
                              option(value='director') Director
                              option(value='manager') Manager
                              option(value='agent') Sales Agent
                            small  
                          td.form-field
                            select#ddbranch.form-control(type='text' value='ddbranch' name='ddbranch' autocomplete='off' width='100%')
                              option(selected='' value='') --select branch--
                              option(value='Kampala') Kampala
                              option(value='kabale') kabale
                            small 
                  hr
                  .mb-3
                    input.btn.btn-primary.d-block.w-100.mt-3(type='submit' value='Register')
                // end reg form
                // ===============================================
                // End of Main Content
                // ===============================================
                // <section> begin ============================
                section.py-0.bg-dark.light
                  div
                    hr.my-0.text-600.opacity-25
                  // JavaScripts
                  // ===============================================
                  script(src='/javascript/vendors/popper/popper.min.js')
                  script(src='/javascript/vendors/bootstrap/bootstrap.min.js')
                  script(src='/javascript/vendors/anchorjs/anchor.min.js')
                  script(src='/javascript/vendors/is/is.min.js')
                  script(src='/javascript/vendors/fontawesome/all.min.js')
                  script(src='/javascript/vendors/lodash/lodash.min.js')
                  script(src='/polyfill.io/v3/polyfill.min58be.js?features=window.scroll')
                  script(src='/javascript/vendors/list.js/list.min.js')
                  script(src='/assets/js/theme.js')
                  script(src='/assets/js/config.js')
                  script(src='/javascript/vendors/overlayscrollbars/OverlayScrollbars.min.js')
                  script(src='/javascript/userVal.js')
                  script.
                    var isRTL = JSON.parse(localStorage.getItem('isRTL'));
                    if (isRTL) {
                    var linkDefault = document.getElementById('style-default');
                    var userLinkDefault = document.getElementById('user-style-default');
                    linkDefault.setAttribute('disabled', true);
                    userLinkDefault.setAttribute('disabled', true);
                    document.querySelector('html').setAttribute('dir', 'rtl');
                    } else {
                    var linkRTL = document.getElementById('style-rtl');
                    var userLinkRTL = document.getElementById('user-style-rtl');
                    linkRTL.setAttribute('disabled', true);
                    userLinkRTL.setAttribute('disabled', true);
                    }
