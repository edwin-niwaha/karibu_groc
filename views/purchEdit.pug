      .content-page
        // Start content
        .content
          .container-fluid
            // Left Sidebar End
            // ==============================================================
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  h4.page-title
                    | Welcome ! 
                    b #{username} |
                  ol.breadcrumb.float-right
                    | Branch:&nbsp;  
                    b #{branch} &nbsp;|&nbsp;               
                    | Role:&nbsp;  
                    b #{role} &nbsp;|&nbsp;
                    | Email:&nbsp;  
                    b #{email} &nbsp;|&nbsp;
                    li.breadcrumb-item
                      a(href='/add_purch/') Purchases
                    li.breadcrumb-item
                      a(href='/purch_list/') Purchase List
                  .clearfix
            form#purchfrm.form(action = "/purchaseUpdate?id="+purchase._id method="POST")
              .row
                .col-md-6
                  .card-box
                    .form-horizontal(role='form')
                        table.table-responsive
                              tbody
                                tr
                                  th
                                    label(for='ddprodtype') Name of the produce:
                                  th
                                  th
                                    label(for='x') 
                                tr
                                  td.form-field
                                    select#prodnamex.form-control(name='prodnamex' style='width:100%' onchange="check1();")
                                      option(value='' selected='') --search the item name--
                                      each pdc in produce
                                        option(value=pdc.itemName) #{pdc.itemName}
                                    small
                                  td.form-field
                                    input#prodname(type='text' name='prodname' autocomplete='off' style='height:40px' value=purchase.prodname readonly)
                                    small                             
                        table.table-responsive
                              tbody
                                tr
                                  th
                                    label(for='ddprodtype')  Type of produce:
                                  th
                                  th
                                    label(for='x') 
                                tr
                                  td.form-field
                                    select#ddprodtype1.form-control(type='text' value='ddprodtype1' name='ddprodtype1' autocomplete='off' width='100%' onchange="check();")
                                      option(value='' selected='') --select the item category--
                                      each pdc in produce
                                        option(value=pdc.ddprodtype) #{pdc.ddprodtype} 
                                    small
                                  td.form-field
                                    input#ddprodtype(type='text' name='ddprodtype' autocomplete='off' style='height:40px' value=purchase.ddprodtype readonly)
                                    small  
                        .form-field
                          label(for='sdate') Purchase Date:
                          input#sdate(type='date' name='sdate' autocomplete='off' value=purchase.sdate)
                          small                  
                        table.table-responsive
                          tbody
                            tr
                              th
                                label(for='tonn') Tonnage(kgs):
                              th &nbsp;&nbsp;&nbsp;
                              th
                                label(for='unitprice') Price per Kg:
                            tr
                              td.form-field
                                input#tonn.form-group(type='text' name='tonn' onkeyup='javascript:this.value=Comma(this.value);' onchange='javascript:sumCalc();' maxlength='9' autocomplete='off' style='width: 100%;' onkeypress='return functionx(event);' value=purchase.tonn)
                                small
                              th &nbsp;&nbsp;&nbsp;
                              td.form-field
                                input#unitprice.form-group(type='text' name='unitprice' maxlength='9' autocomplete='off' style='width: 100%;' onkeypress='return functionx(event);' onkeyup='javascript:this.value=Comma(this.value);' onchange='javascript:sumCalc();' value=purchase.unitprice)
                                small   
                        table.table-responsive
                              tbody
                                tr
                                  th
                                    label(for='costprice') Cost Price(UgX):
                                  th &nbsp;&nbsp;&nbsp;
                                  th
                                    label(for='sellprice') Selling Price(UgX): 
                                tr
                                  td.form-field
                                    input#costprice(type='text' name='costprice' autocomplete='off' maxlength='12' onkeypress='return functionx(event);' value=purchase.costprice)
                                    small
                                  td &nbsp;&nbsp;&nbsp;
                                  td.form-field
                                    input#sellprice(type='text' name='sellprice' autocomplete='off' maxlength='12' onkeyup='javascript:this.value=Comma(this.value);' onkeypress='return functionx(event);' value=purchase.sellprice)
                                    small                                 
                // end col
                .col-md-6
                  .card-box
                    table.table-responsive
                      tbody
                        tr
                          th
                            label(for='dealer') Supplier
                          th &nbsp;&nbsp;
                          th
                            label(for='contacttel') Dealer's Name:
                        tr
                          td.form-field
                            select#supplier.form-control(type='text' name='supplier' autocomplete='off' width='100%' value=purchase.supplier)
                              option(value='' selected='') select the supplier
                              option(value='Ind dealers') Individual dealers 
                              option(value='Other Companies') Other companies   
                              option(value='Maganjo farms') Own farms - Maganjo
                              option(value='Matugga farms') Own farms - Matugga                       
                            small
                          td &nbsp;&nbsp;
                          td.form-field
                            input#dealer(type='text' name='dealer' autocomplete='off' onkeypress='return Validatedealer(event);' value=purchase.dealer)
                            small#lblError(style='color: red')
                            small
                    table.table-responsive
                      tbody
                        tr
                          th
                            label(for='contacttel') Telephone Contact:
                          th &nbsp;&nbsp;
                          th
                            label(for='ddbranch') Receiving Branch
                        tr
                          td.form-field
                            input#contacttel(type='text' name='contacttel' autocomplete='off' maxlength='10' onkeypress='return functionx(event);' value=purchase.contacttel)
                            small#lblError(style='color: red')
                            small
                          td &nbsp;&nbsp;
                          td.form-field
                            input#ddbranch(type='text' name='ddbranch' autocomplete='off' maxlength='12' value=branch readonly)                               
                    hr                                 
                    .mb-3
                      input#entertedby(type='text' name='entertedby' style='width: 40%; border: none;' value=username readonly hidden)
                      input.btn-primary(type='submit' value='Purchase' style='width: 50%; height: 40px; border-radius: 5px;')
